# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{go,py,js,json,yaml,yml,md,sh}]
indent_style = space

[*.go]
indent_size = 4

[*.py]
indent_size = 4
max_line_length = 120

[*.{js,json,yaml,yml}]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.sh]
indent_size = 4

[Makefile]
indent_style = tab

