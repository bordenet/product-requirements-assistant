{
  "name": "product-requirements-assistant",
  "version": "0.6.0",
  "description": "AI-assisted 3-phase workflow for creating Product Requirements Documents",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/bordenet/product-requirements-assistant.git"
  },
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=\\.test\\.js$",
    "test:e2e": "playwright test",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "format": "eslint js/**/*.js --fix",
    "quality": "npm run lint && npm run test:coverage",
    "serve": "python3 -m http.server 8000",
    "deploy": "./scripts/deploy-web.sh",
    "prepare": "command -v pre-commit >/dev/null 2>&1 && pre-commit install || echo 'pre-commit not installed, skipping hook setup'"
  },
  "keywords": [
    "ai",
    "workflow",
    "prd",
    "product-requirements",
    "claude",
    "gemini",
    "document-generation",
    "requirements-engineering"
  ],
  "author": "Matt J Bordenet",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.57.0",
    "eslint": "^8.55.0",
    "fake-indexeddb": "^6.2.5",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0"
  }
}
