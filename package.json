{
  "name": "product-requirements-assistant",
  "version": "1.0.0",
  "description": "AI-assisted 3-phase workflow for creating Product Requirements Documents",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bordenet/product-requirements-assistant.git"
  },
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:assistant": "NODE_OPTIONS='--experimental-vm-modules' jest assistant/tests/",
    "test:validator": "NODE_OPTIONS='--experimental-vm-modules' jest validator/tests/",
    "test:e2e": "playwright test",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "lint": "eslint shared/js/ validator/js/",
    "lint:fix": "eslint shared/js/ validator/js/ --fix",
    "format": "eslint shared/js/ validator/js/ --fix",
    "quality": "npm run lint && npm run test:coverage",
    "serve": "python3 -m http.server 8000",
    "deploy": "./scripts/deploy-web.sh",
    "prepare": "command -v pre-commit >/dev/null 2>&1 && pre-commit install || echo 'pre-commit not installed, skipping hook setup'"
  },
  "keywords": [
    "product-requirements",
    "prd",
    "ai-assisted",
    "workflow"
  ],
  "author": "Matt J Bordenet",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.58.2",
    "eslint": "^9.39.2",
    "fake-indexeddb": "^6.2.5",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0"
  },
  "bugs": {
    "url": "https://github.com/bordenet/product-requirements-assistant/issues"
  },
  "homepage": "https://bordenet.github.io/product-requirements-assistant/"
}
